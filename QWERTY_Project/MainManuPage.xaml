                <Button Content="Оборудование" Height="30" Margin="10" Click="GoOborud"/>
                <Button Content="Заказы" Height="30" Margin="10" Click="GoZakaz"/>
                <Button Content="Каталог" Height="30" Margin="10" Click="GoKatalog"/>
                <Button Content="Заказы" Height="30" Margin="10" Click="GoDevice"/>
                <Button Content="Заявка" Height="30" Margin="10" Click="GoOrder"/>
            </StackPanel>
        </Grid>
        <Frame Name="frame" NavigationUIVisibility="Hidden" Grid.Column="1">
            
        </Frame>
    </Grid>
</Window>
