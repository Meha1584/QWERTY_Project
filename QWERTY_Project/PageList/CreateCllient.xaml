<Page x:Class="QWERTY_Project.PageList.CreateCllient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QWERTY_Project.PageList"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateCllient">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите имя"/>
            <TextBox Name="inputFio"/>
            <Label Content="Введите Серию и номер паспорта"/>
            <TextBox Name="inputSerial"/>
            <Label Content="Введите телефон"/>
            <TextBox Name="inputPhone"/>
            <Button Content="Добавить" Click="AddClient"/>
        </StackPanel>
    </Grid>
</Page>
