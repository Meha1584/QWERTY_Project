<Page x:Class="QWERTY_Project.AddMasterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QWERTY_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление мастера">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите табельный номер"/>
            <TextBox Name="inputTabNum"/>
            <Label Content="Введите ФИО"/>
            <TextBox Name="inputFIO"/>
            <Label Content="Введите Пароль"/>
            <TextBox Name="inputPass"/>
            <Label Content="Введите оклад"/>
            <TextBox Name="inputOklad"/>
            <Label Content="Введите процент ставки"/>
            <TextBox Name="inputProcent"/>
            <Button Content="Добавить" Margin="20" Click="AddMaster"/>
        </StackPanel>
    </Grid>
</Page>
